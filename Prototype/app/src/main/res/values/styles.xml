<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">arial</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="navigation_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="game_info_text">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="table_cell_style">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">@dimen/cell_size</item>
        <item name="android:layout_width">@dimen/cell_size</item>
        <item name="android:background">@color/table_cell_background_color</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="player_cell_style">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">@dimen/cell_size</item>
        <item name="android:layout_width">@dimen/cell_size</item>
        <item name="android:background">@color/player_cell_background_color</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
